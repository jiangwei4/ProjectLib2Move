{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Password</th>
                <th>Role</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>NumPermis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.Nom }}</td>
                <td>{{ user.Prenom }}</td>
                <td>{{ user.Password }}</td>
                <td>
                {% for role in user.Role %}
                <li>{{ role }}</li>
                {%endfor%}
                </td>
                <td>{{ user.Adresse }}</td>
                <td>{{ user.Telephone }}</td>
                <td>{{ user.Email }}</td>
                <td>{{ user.NumPermis }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
