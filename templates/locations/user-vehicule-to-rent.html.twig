{% extends 'base.html.twig' %}

{% block title %}Hello LocationsController!{% endblock %}

{% block body %}
    
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        {{ form_start(form) }}
        <div class="w3-container w3-red">
            <h2>Effectuer une reservation</h2>
        </div>
      <label class="w3-text"><b>{{ form_label(form.dateDebut) }}</b></label>
       <br> {{ form_errors(form.dateDebut) }}
        {{ form_widget(form.dateDebut) }}
        {{ form_help(form.dateDebut) }}
        <br>
        <label class="w3-text"><b> {{ form_label(form.dateFin) }}</b></label>
        <br>{{ form_errors(form.dateFin) }}
        {{ form_widget(form.dateFin) }}
        {{ form_help(form.dateFin) }}

        {{ form_row(form.submit) }}

        {{ form_end(form) }}
        
    </div>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
{% endblock %}