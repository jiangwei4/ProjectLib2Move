{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if users|length < 1 %}
        <p>Aucun utilisateur</p>
    {% endif %}

    {% for user in users %}

<br>
        <div class="w3-card-4" style="width:100%;">
            <header class="w3-container w3-blue">
                <h1>{{ user.Prenom }}  {{ user.Nom }}</h1>
            </header>
            <div class="w3-container">
                <label>Adresse : {{ user.Adresse }} </label><br>
                <label>Telephone : {{ user.Telephone }} </label><br>
                <label>Num Permis : {{ user.NumPermis }} </label><br>
                <label>Email : {{ user.Email }} </label><br>
                <label>
                    Role : 
                    <ul>
                    {% for item in user.Role %}
                        <li>{{ item }}</li>
                    {% endfor %}
                    </ul> 
                </label><br>

            </div>
                <a href="{{ path('lise_user_remove',{'id':user.id}) }}"><img src="\img\supr.png"></a>
                <a href="{{ path('lise_user_edit',{'id':user.id}) }}"><img src="\img\edit.png"></a>


        </div>

    {% endfor %}
</div>
{% endblock %}