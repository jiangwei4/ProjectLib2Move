{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<br><br>

<div class="example-wrapper">



    {{ form_start(form) }}
    <div class="w3-container w3-red">
        <h2>Input Form</h2>
    </div>

        <label class="w3-text"><b> {{ form_label(form.Email) }}</b></label>
        <br>{{ form_errors(form.Email) }}
        {{ form_widget(form.Email) }}
        {{ form_help(form.Email) }}

        <br> <label class="w3-text"><b> {{ form_label(form.Password) }}</b></label>
        <br>{{ form_errors(form.Password) }}
        {{ form_widget(form.Password) }}
        {{ form_help(form.Password) }}
        <br>

        {{ form_row(form.submit) }}
    {{ form_errors(form) }}
    {{ form_end(form) }}


</div>
{% endblock %}
