{% extends 'base.html.twig' %}

{% block title %}Hello ModifierOffreLocationsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if Offrelocations|length < 1 %}
        <p>Aucune Offre</p>
    {% endif %}

    {% for offre in Offrelocations %}

<br>
        <div class="w3-card-4" style="width:100%;">
            <header class="w3-container w3-blue">
                <h1>Offre Gamme {{offre.gamme}} {{ offre.typeVehicule}} </h1>
            </header>
            <div class="w3-container">
                <label>Type de Vehicule : {{ offre.typeVehicule }} </label><br>
                <label>Kilométrage maximum par jour: {{ offre.kmMax }} Km </label><br>
                <label>Prix de la location pour la journée: {{offre.prix}} Euros </label><br>
                <label>Ville : {{ offre.ville }} </label><br>
                <label>Ville : {{ offre.gamme }} </label><br>
                <br>
            </div>
                <a href="{{ path('modifier_offre_locations_remove',{'id':offre.id}) }}"><img src="\img\supr.png"></a>
                <a href="{{ path('modifier_offre_locations_edit',{'id':offre.id}) }}"><img src="\img\edit.png"></a>
        </div>

    {% endfor %}
</div>
{% endblock %}
