{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        {{ form_start(form) }}
        <div class="w3-container w3-red">
            <h2>Input Form</h2>
        </div>

      <label class="w3-text"><b>{{ form_label(form.ville) }}</b></label>
       <br> {{ form_errors(form.ville) }}
        {{ form_widget(form.ville) }}
        {{ form_help(form.ville) }}
        <br>
        <label class="w3-text"><b> {{ form_label(form.codePostal) }}</b></label>
        <br>{{ form_errors(form.codePostal) }}
        {{ form_widget(form.codePostal) }}
        {{ form_help(form.codePostal) }}





        {{ form_row(form.submit) }}

        {{ form_end(form) }}
    </div>
{% endblock %}
