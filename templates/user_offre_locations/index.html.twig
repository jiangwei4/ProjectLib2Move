{% extends 'base.html.twig' %}

{% block title %}Hello LocationsController!{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if locations|length < 1 %}
        <p>Aucune Offre</p>
    {% endif %}

    {% for location in locations %}

<br>
        <div class="w3-card-4" style="width:100%;²">
            <header class="w3-container w3-blue">
                <h1>Offre Gamme {{location.gamme}} {{ location.typeVehicule}} </h1>
            </header>
            <div class="w3-container">
                <table>
                <tr><td><label>Type de Vehicule : {{ location.typeVehicule }} </label></td><td>Liste Vehicule</td></tr>
                <tr><td><label>Kilométrage maximum par jour: {{ location.kmMax }} Km </label></td></tr>
                <tr><td><label>Prix de la location pour la journée: {{location.prix}} Euros </label></td></tr>
                <tr><td><label>Gamme : {{location.gamme}}
                </label></td></tr>
                <tr><td><label>Ville : {{ location.ville }} </label></td></tr>
                </table>
                <br>
            </div>
            <a href="{{ path('locations_choix',{'id':location.id}) }}"><img src="\img\choisir.png"></a>
        </div>
        
    {% endfor %}
</div>
{% endblock %}
